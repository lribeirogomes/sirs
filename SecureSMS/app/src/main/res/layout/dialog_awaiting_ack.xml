<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This contact hasn&apos;t approved to exchange messages with you yet.\nPlease wait for their confirmation before you send them a message."
        android:id="@+id/textView3"
        android:layout_below="@+id/space31"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contact: Sending failed"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:id="@+id/space31"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:id="@+id/space35"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3" />

    <Space
        android:id="@+id/space34"
        android:layout_width="@dimen/box_min_size_mini"
        android:layout_height="5dp"
        android:layout_below="@+id/space35"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:id="@+id/space36"
        android:layout_width="@dimen/box_min_size_mini"
        android:layout_height="5dp"
        android:layout_below="@+id/space35"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        app:backgroundTint="@color/lighterBackground"
        android:id="@+id/bOkAwaitingAck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lighterBackground"
        android:minHeight="@dimen/box_min_size"
        android:onClick="showPrevious"
        android:text="Ok"
        android:layout_below="@+id/space36"
        android:layout_toRightOf="@+id/space34"
        android:layout_toLeftOf="@+id/space36"
        android:layout_toStartOf="@+id/space36"
        android:layout_toEndOf="@id/space34" />

</RelativeLayout>