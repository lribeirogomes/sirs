<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".presentation.RegisterActivity">

        <!-- TITLE -->
        <!-- TITLE -->

        <!-- IMPORT CERTIFICATES -->


        <!-- PHONE NUMBER -->
        <EditText
            android:id="@+id/etPhoneNumberRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!-- PHONE NUMBER -->
        <Space
            android:id="@+id/space14"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etPhoneNumberRegister" />

        <!-- PASSWORD -->
        <EditText
            android:id="@+id/etPasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!-- PASSWORD -->
        <Space
            android:id="@+id/space15"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etPasswordRegister" />

        <!-- SHOW PASSWORD -->
        <CheckBox
            android:id="@+id/cbShowPasswordRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space15"
            android:checked="false"
            android:text="Show Password" />


        <Space
            android:id="@+id/space9"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cbShowPasswordRegister" />

        <Space
            android:id="@+id/space19"
            android:layout_width="@dimen/box_min_size_mini"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space9" />

        <Space
            android:id="@+id/space20"
            android:layout_width="@dimen/box_min_size_mini"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/space19" />

        <Button
            android:id="@+id/bBackRegister1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space19"
            android:layout_toEndOf="@+id/space19"
            android:layout_toLeftOf="@+id/space6"
            android:layout_toRightOf="@+id/space19"
            android:layout_toStartOf="@+id/space6"
            android:backgroundTint="@color/lighterBackground"
            app:backgroundTint="@color/lighterBackground"
            android:minHeight="@dimen/box_min_size"
            android:onClick="cancelRegistration"
            android:text="Cancel" />

        <Button
            android:id="@+id/bNextRegister1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bBackRegister1"
            android:layout_toEndOf="@+id/space6"
            android:layout_toLeftOf="@+id/space20"
            android:layout_toRightOf="@+id/space6"
            android:layout_toStartOf="@+id/space20"
            android:backgroundTint="@color/lighterBackground"
            app:backgroundTint="@color/lighterBackground"
            android:minHeight="@dimen/box_min_size"
            android:onClick="showNext"
            android:text="NEXT" />

        <Space
            android:id="@+id/space6"
            android:layout_width="@dimen/box_min_size_mini"
            android:layout_height="5dp"
            android:layout_alignTop="@+id/space19"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Phone number"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space14"
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>
</merge>